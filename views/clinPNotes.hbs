<main>
  <h3 class="title">Note History</h3>
  <ul>
    <li class="row-container">
      <div class="flex-item list-header hide-date">Date</div>
      <div class="flex-item-comment list-header">Note</div>
    </li>
    {{#each notes}}
      <li class="row-container">
        <div class="flex-item box hide-date">{{date}}</div>
        <div class="flex-item box hide-date">{{patient}}</div>
        <div class="flex-item-comment comment-box">{{note}}</div>
      </li>
    {{/each}}
  </ul>
</main>