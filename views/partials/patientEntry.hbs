<div class="row-container">
  <div class="flex-item-name">{{patient.firstName}} {{patient.lastName}}</div>
  <div class="data-item">{{patient.gender}}</div>
  <div class="data-item">{{patient.dob}}</div>
  {{! if patient has entered some data today }}
  {{#if record}}
    {{!-- bgl --}}
    <div class="data-item"{{#if (validation record.BGL.figure dataSet.BGL.min dataSet.BGL.max)}}
      class="data-item warning"
      {{/if}}>{{record.BGL.figure}}</div>

    {{!-- weight --}}
    <div class="data-item"{{#if (validation record.Weight.figure dataSet.Weight.min dataSet.Weight.max)}}
      class="data-item warning"
      {{/if}}>{{record.Weight.figure}}</div>

    {{!-- insulin --}}
    <div class="data-item"{{#if (validation record.Insulin.figure dataSet.Insulin.min dataSet.Insulin.max)}}
      class="data-item warning"
      {{/if}}>{{record.Insulin.figure}}</div>

    {{!-- exercise --}}
    <div class="data-item"{{#if (validation record.Exercise.figure dataSet.Exercise.min dataSet.Exercise.max)}}
      class="data-item warning"
      {{/if}}>{{record.Exercise.figure}}</div>

    {{!-- comments --}}
    <div>
      {{#each comments}}
        <p class="data-item">{{this}}</p>
      {{/each}}
    </div>
    {{! patient hasn't entered any data }}
  {{else}}
    <div class="data-item">N/A</div>
    <div class="data-item">N/A</div>
    <div class="data-item">N/A</div>
    <div class="data-item">N/A</div>
    <div class="data-item">-</div>
  {{/if}}
</div>