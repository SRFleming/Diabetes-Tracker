<form action="/auth/login/patient" method="post" name="login">
  <h1>Patient Login</h1>
  <h3>Welcome Back!</h3>
  <input
    type="email"
    name="email"
    placeholder="Email Address"
    required
    class="input-style"
  />
  <input
    type="password"
    name="password"
    placeholder="Password"
    required
    class="input-style"
  />
  <button class="btn-login" type="submit" value="login">Log In</button>
</form>