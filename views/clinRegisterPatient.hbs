<main>
  <h3 class="title">Register Patient</h3>
  <form class="register-form" method="post" name="patient-register" action="/clinician/patient-register">
    <div class="form-container">
      <div>
        <h4 class="patient-container sub-title">Patient Data</h4>
        <ul class="patient-container data-list">
          <li class="row-container">
            <div class="flex-item row-title">First Name</div>
            <div class="flex-item">
              <input
              type="text"
              name="firstName"
              placeholder="Enter first name"
              required
              class="box-style input-style"
              />
            </div>
          </li>
          <li class="row-container">
            <div class="flex-item row-title">Last Name</div>
            <div class="flex-item">
              <input
              type="text"
              name="lastName"
              placeholder="Enter last name"
              required
              class="box-style input-style"
              />  
            </div>
          </li>
          <li class="row-container-left">
            <div class="flex-item row-title">Sex</div>
            <div class="flex-item">
              <input
              type="radio"
              name="sex"
              required
              class="radio"
              value="Male"
              />
              <label for="Male">Male</label><br />
              <input
              type="radio"
              name="sex"
              required
              class="radio"
              value="Female"
              />
              <label for="Female">Female</label><br />
              <input
              type="radio"
              name="sex"
              required
              class="radio"
              value="Other"
              />
              <label for="Other">Other</label>
            </div>
          </li>
          <li class="row-container">
            <div class="flex-item row-title">DOB</div>
            <div class="flex-item">
              <input
              type="date"
              name="dob"
              required
              class="box-style input-style"
              />
            </div>
          </li>
          <li class="row-container">
            <div class="flex-item row-title">Email Address</div>
            <div class="flex-item">
              <input
              type="email"
              name="email"
              placeholder="Enter email"
              required
              class="box-style input-style"
              />
            </div>
          </li>
          <li class="row-container">
            <div class="flex-item row-title">Username</div>
            <div class="flex-item">
              <input
              type="text"
              name="username"
              placeholder="Enter username"
              required
              class="box-style input-style"
              />
            </div>
          </li>
          <li class="row-container">
            <div class="flex-item row-title">Password</div>
            <div class="flex-item">
              <input
              type="password"
              name="password"
              id="password"
              placeholder="Password (min 8 char)"
              onchange="check_password();"
              required
              class="box-style input-style"
              />
            </div>
          </li>
          <li class="row-container">
            <div class="flex-item row-title">Confirm Password</div>
            <div class="flex-item">
              <input
              type="password"
              name="confirm-password"
              id="confirm-password"
              placeholder="Retype password"
              onchange="check_password();"
              required
              class="box-style input-style"
              />
              <span id="feedback"></span>
            </div>
          </li>
          <li class="row-container-left">
            <div class="flex-item row-title">Bio</div>
            <div class="flex-item">
              <textarea name="bio" placeholder="Enter brief bio of patient" class="box-style input-style bio" wrap="soft"></textarea>
            </div>
          </li>
        </ul>
      </div>
      <div class="btn-submit">
        <input class="box-style btn-style" type="submit" name="submit" id="submit" value="Submit" disabled/>
      </div>
    </div>
  </form>
</main>