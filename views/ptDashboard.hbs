<header>
  <h1>Welcome back, {{patient}}!</h1>
  <button type="button"><img src="/image/icon/patient-msg-logo.png" /></button>
</header>

<main>
  <h1>Dashboard</h1>
  <h3>Today <a href="/past.html">Past</a></h3>
  <div class="engagement-rate-container">
    <h3>Your Today's</h3>
    <p class="engagement-rate">{{progress}}</p>
    <h3>Engagement Rate</h3>
  </div>
  <br />
  <br />
  <div class="insulin-dose-container">
    <h3>Insulin doses</h3>
    {{#if healthRd.Insulin}}
      <h3 class="insulin-doses">{{healthRd.Insulin.figure}}</h3>
    {{else}}
      <h3 class="insulin-doses">N/A</h3>
    {{/if}}
    <h3>Doses</h3>
  </div>
  <br />
  <br />
  <div class="weight-container">
    <h3>Weight</h3>
    {{#if healthRd.Weight}}
      <h3 class="weight">{{healthRd.Weight.figure}}</h3>
    {{else}}
      <h3 class="weight">N/A</h3>
    {{/if}}
    <h3>Kg</h3>
  </div>
  <br />
  <br />
  <div class="blood-glucose-container">
    <h3>BGL</h3>
    {{#if healthRd.BGL}}
      <h3 class="blood-glucose-level">{{healthRd.BGL.figure}}</h3>
    {{else}}
      <h3 class="blood-glucose-level">N/A</h3>
    {{/if}}
    <h3>nmol/L</h3>
  </div>
  <br />
  <br /> 
  <div class="exercise-container">
    <h3>Exercise</h3>
    {{#if healthRd.Exercise}}
      <h3 class="exercise">{{healthRd.Exercise.figure}}</h3>
    {{else}}
      <h3 class="exercise">N/A</h3>
    {{/if}}
    <h3>Steps</h3>
  </div>
  <br />
  <br />
  <div class="requirement-container">
    <p>* Required</p>
  </div>
</main>

{{> navigation}}